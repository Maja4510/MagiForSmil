}

.herovid.blurred {
    filter: blur(3px);
    transition: filter 20s ease-in-out; /* Exempel med längre mjuk övergång */
}





</style>

<script>
document.addEventListener('DOMContentLoaded', () => {
    const video = document.getElementById('heroVideo');
    let hasScrolled = false;

    // Lyssna på scroll-händelsen
    window.addEventListener('scroll', () => {
        if (!hasScrolled) { // Kontrollera om scroll redan har skett
            hasScrolled = true; // Sätt flagga för att undvika flera uppspelningar
            
            // Fördröj starten av blur-reduceringen
            setTimeout(() => {
                video.play(); // Spela upp videon
                video.classList.remove('blurred'); // Ta bort blur-effekten
            }, 500); 
        }
    });
});


</script>